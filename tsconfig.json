{
  "include": ["./src/**/*", "./demo/**/*"],
  "exclude": ["node_modules", "**/__mocks__/**/*", "**/__tests__/*.*", "**/*.d.ts"],
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    // Always include these settings
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Basic Options */
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "ESNext", // adds support for ESNext functionality
      "DOM" // adds support for 'window' other dom methods
    ],
    "allowJs": true,
    "noEmit": true,

    /* JSX support */
    "jsx": "preserve",
    "declaration": true,

    /* Strict Type-Checking Options */
    "strict": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // "strictFunctionTypes": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
